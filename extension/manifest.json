{
  "manifest_version": 3,
  "name": "Grandma Mode",
  "version": "1.0",
  "description": "Simplifies complex websites using Gemini 3.",
  "permissions": [
    "activeTab", 
    "scripting"
  ],
  "action": {
    "default_title": "Activate Grandma Mode"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}